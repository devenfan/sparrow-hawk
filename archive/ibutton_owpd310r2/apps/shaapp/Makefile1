USIMPL_SRC   = win32lnk.c
APP_SRC      = shaapp.c 

SRCS = $(COMMON_SRC) $(USERIAL_SRC) $(USIMPL_SRC) $(APP_SRC)

INCFLAG = $(foreach d, $(SRCDIR), $(join -I, $(d)))

HEADS = $(foreach d, $(SRCDIR), $(wildcard $(d)/*.h))

OBJDIR = ./build
#OBJDIR = ../../build/$(APPNAME)

