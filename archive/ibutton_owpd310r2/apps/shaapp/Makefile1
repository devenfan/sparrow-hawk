$(OBJDIR)/shaapp.o :
	$(CC) -c $(APP_DIR)/shaapp.c        -o $@ $(INCFLAG)

$(OBJDIR)/ds2480ut.o : 
	$(CC) -c $(USERIAL_DIR)/ds2480ut.c  -o $@ $(INCFLAG)
$(OBJDIR)/owllu.o :
	$(CC) -c $(USERIAL_DIR)/owllu.c  	-o $@ $(INCFLAG)
$(OBJDIR)/ownetu.o :
	$(CC) -c $(USERIAL_DIR)/ownetu.c  	-o $@ $(INCFLAG)
